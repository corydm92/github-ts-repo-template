{
  "name": "github-ts-repo-template",
  "version": "0.1.0",
  "description": "Template for creating TypeScript based github projects",
  "homepage": "https://github.com/corydm92/github-ts-repo-template#readme",
  "bugs": {
    "url": "https://github.com/corydm92/github-ts-repo-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/corydm92/github-ts-repo-template.git"
  },
  "license": "ISC",
  "author": "Cory Morrissey",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "prepare": "husky",
    "format:write": "prettier . --write --ignore-path .prettierignore.project",
    "format:check": "prettier . --check --ignore-path .prettierignore.project",
    "lint": "eslint . --ignore-pattern \"apps/**\" --ignore-pattern \"packages/**\"",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "test": "echo \"No test specified\" && exit 0",
    "ci:contract": "node scripts/workspace-contract.mjs",
    "ci:project": "pnpm run format:check && pnpm run lint && pnpm run type-check && pnpm run test && pnpm run ci:contract",
    "ci:apps": "node scripts/run-affected.mjs ci",
    "ci": "node scripts/run-ci.mjs",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@commitlint/format": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^17.1.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264"
}
